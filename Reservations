
package reservations;


public class Reservations {
    
    public static final int ROW_SIZE = 6;
    public static final int COLOUMN_SIZE = 25;
    
    public static void main(String[] args) {
       
    int seats[][] = new int[COLOUMN_SIZE][ROW_SIZE];
    
    print(seats);
    // Trying to figure out how to change a specific coloumn to 1s instead 0s
    for(int i =0; i<seats.length; i++)
        for(int j=0; i<seats[i].length; j++)
            seats[3][j] = 1;
    print(seats);
    } // End of main
    
    public static void print(int m[][]){
    for(int i =0; i<m.length; i++){
        for(int j=0; j<m[i].length; j++)
            System.out.print(m[i][j]);
        System.out.println("");
        }
    } // End of print method
    
} // End of calss
